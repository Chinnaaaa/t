fun main() {
    print("Enter a number: ")
    val number = readLine()!!.toInt() // Read user input as an Int
    
    val isArmstrong = isArmstrong(number)
    
    if (isArmstrong) {
        println("$number is an Armstrong number")
    } else {
        println("$number is not an Armstrong number")
    }
}

fun isArmstrong(number: Int): Boolean {
    var num = number
    var sum = 0
    val numDigits = num.toString().length
    
    // Calculate the sum of the cubes of the digits
    while (num != 0) {
        val digit = num % 10
        sum += Math.pow(digit.toDouble(), numDigits.toDouble()).toInt()
        num /= 10
    }
    
    // Check if the sum is equal to the original number
    return number == sum
}



output: 

Enter a number: 153
153 is an Armstrong number
