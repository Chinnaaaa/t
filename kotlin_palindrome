fun main() {
    print("Enter a number: ")
    val number = readLine()!!.toInt() // Read user input as an Int
    
    val isPalindrome = isPalindrome(number)
    
    if (isPalindrome) {
        println("$number is a palindrome")
    } else {
        println("$number is not a palindrome")
    }
}

fun isPalindrome(number: Int): Boolean {
    var num = number
    var reversedNum = 0
    
    // Reverse the number
    while (num != 0) {
        val digit = num % 10
        reversedNum = reversedNum * 10 + digit
        num /= 10
    }
    
    // Check if the number is equal to its reverse
    return number == reversedNum
}


output:

Enter a number: 12321
12321 is a palindrome

